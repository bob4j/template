<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Appenders>

		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss,SSS} [%t] (%F:%L) %-5p %c{1} %x - %m%n" />
		</Console>

	</Appenders>

	<Loggers>

		<Logger name="com.openu" level="debug" />

		<Logger name="org.springframework" level="info" />

		<Root level="WARN">
			<AppenderRef ref="Console" />
		</Root>

	</Loggers>

</Configuration>